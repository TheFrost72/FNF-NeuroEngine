<?xml version="1.0" encoding="utf-8"?>
<project>

	<!-- App -->
	<app
		title="FNF: Neuro Engine"
		file="NeuroEngine"
		main="Main"
		version="0.2.8"
		company="ShadowMario"
		packageName="com.thefrost72.neuroengine"
		package="com.thefrost72.neuroengine"
		preloader="flixel.system.FlxPreloader"
	/>

	<set name="APP_ID" value="0x0100f6c013bbc000" />
	<set name="SWF_VERSION" value="11.8" />

	<!-- Build -->
	<set name="BUILD_DIR" value="export/debug" if="debug" />
	<set name="BUILD_DIR" value="export/release" unless="debug" />
	<set name="BUILD_DIR" value="export/32bit" if="32bits" />

	<!-- Defines -->
	<define name="MODS_ALLOWED" if="desktop || mobile" />
	<define name="HSCRIPT_ALLOWED" if="desktop || mobile" />
	<define name="LUA_ALLOWED" if="desktop || mobile" />
	<define name="VIDEOS_ALLOWED" if="desktop || mobile" unless="32bits" />
	<define name="DISCORD_ALLOWED" if="desktop" />
	<define name="TRANSLATIONS_ALLOWED" />
	<define name="BASE_GAME_FILES" />
	<define name="MULTITHREADED_LOADING" if="cpp" />
	<define name="IRIS_DEBUG" />
	<define name="TITLE_SCREEN_EASTER_EGG" />
	<define name="SHOW_LOADING_SCREEN" />
	<define name="PSYCH_WATERMARKS" />
	<define name="ACHIEVEMENTS_ALLOWED" />
	<define name="COPYSTATE_ALLOWED" if="MODS_ALLOWED || mobile" />
	<define name="CHECK_FOR_UPDATES" if="officialBuild" />
	
	<!-- ____________________________ Window Settings ___________________________ -->

	<!--These window settings apply to all targets-->
	<window width="1280" height="720" fps="60" background="#000000" hardware="true" vsync="false" allow-high-dpi="true" />

	<!--HTML5-specific-->
	<window if="html5" resizable="true" />

	<!--Desktop-specific-->
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="true" vsync="false"/>

	<!--Mobile-specific-->
	<window if="mobile" orientation="landscape" fullscreen="true" resizable="false" allow-shaders="true" require-shaders="true" />

	<!--Switch-specific-->
	<window if="switch" orientation="landscape" fullscreen="true" width="0" height="0" resizable="true" />

	<!-- Android -->
	<config:android
	minimum-sdk-version="28"
	target-sdk-version="33"
	display-cutout="shortEdges"
	if="android"
	/>
	
	<!-- Android Storage Permissions-->
	<android permission="android.permission.MANAGE_EXTERNAL_STORAGE" />  
	<android permission="android.permission.READ_EXTERNAL_STORAGE" />  
	<android permission="android.permission.WRITE_EXTERNAL_STORAGE" />  
	
	<classpath name="source" />

	<!-- Assets -->
	<assets path="assets/fonts" />
	<assets path="assets/embed" embed="true" exclude="*.mp3" />
	<assets path="assets/shared" exclude="*.mp3" />
	<assets path="assets/songs" exclude="*.mp3" />
	<assets path="assets/videos" />
	
	<!--Android Icons Assets -->
	<assets path="assets/android/res" rename="res" if="android" />

	<!-- Base game -->
	<assets path="assets/base_game" rename="assets" exclude="*.mp3" />

	<!-- Weeks -->
	<assets path="assets/week_assets" rename="assets" exclude="*.mp3" />

	<section if="TRANSLATIONS_ALLOWED">
		<assets path="assets/translations" rename="assets" exclude="*.mp3" />
	</section>

	<section if="MODS_ALLOWED">
		<assets path="example_mods" rename="mods" />
		<assets path="list.txt" rename="modsList.txt" />
	</section>

	<!-- Libraries -->
	<haxelib name="flixel" />
	<haxelib name="flixel-addons" />
	<haxelib name="flxanimate" />
	<haxelib name="tjson" />
	<haxelib name="extension-androidtools" if="android" />

	<haxelib name="linc_luajit" if="LUA_ALLOWED" />
	<haxelib name="hscript-iris" if="HSCRIPT_ALLOWED" />
	<haxelib name="hxvlc" if="VIDEOS_ALLOWED" />
	<haxelib name="hxdiscord_rpc" if="DISCORD_ALLOWED" />

	<haxedef name="SHARE_MOBILE_FILES" if="ios" />

	<section if="BASE_GAME_FILES">
		<haxelib name="grig.audio" />
		<haxelib name="funkin.vis" />
	</section>

	<!-- Haxe flags -->
	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	<haxedef name="HXC_DEBUG_TRACE" if="debug" />
	<haxedef name="HXCPP_CHECK_POINTER" if="cpp" />
	<haxedef name="no-deprecation-warnings" />

	<!-- Platform -->
	<certificate
		path="key.keystore"
		password="psychengine"
		alias="psychport"
		alias-password="psychengine"
		if="android"
		unless="debug"
	/>

	<!-- iOS CONFIG -->
	<launchStoryboard path="LaunchScreen.storyboard" />
	<config:ios category_type="public.app-category.music-games" />
	<config:mac category_type="public.app-category.music-games" />

	<!-- Icons -->
    <section if="ios">
		<icon path="icons/ios/Icon-App-20x20@1x.png" size="20" />
		<icon path="icons/ios/Icon-App-20x20@2x.png" size="40" />
		<icon path="icons/ios/Icon-App-20x20@3x.png" size="60" />
		<icon path="icons/ios/Icon-App-29x29@1x.png" size="29" />
		<icon path="icons/ios/Icon-App-29x29@2x.png" size="58" />
		<icon path="icons/ios/Icon-App-29x29@3x.png" size="87" />
		<icon path="icons/ios/Icon-App-40x40@1x.png" size="40" />
		<icon path="icons/ios/Icon-App-40x40@2x.png" size="80" />
		<icon path="icons/ios/Icon-App-40x40@3x.png" size="120" />
		<icon path="icons/ios/Icon-App-60x60@2x.png" size="120" />
		<icon path="icons/ios/Icon-App-60x60@3x.png" size="180" />
		<icon path="icons/ios/Icon-App-76x76@1x.png" size="76" />
		<icon path="icons/ios/Icon-App-76x76@2x.png" size="152" />
		<icon path="icons/ios/Icon-App-83.5x83.5@2x.png" size="167" />
		<icon path="icons/ios/ItunesArtwork@2x.png" size="1024" />
    </section>
	
	<section if="desktop">
		<icon path="icons/default/icon16.png" size="16" />
		<icon path="icons/default/icon32.png" size="32" />
		<icon path="icons/default/icon64.png" size="64" />
		<icon path="icons/default/iconOG.png" />
	</section>
	
</project>
